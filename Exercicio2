//Crie um algoritmo que lê um valor real em dólar, e converte o valor para reais. Considere que a cotação é US$ 1 = R$ 4,95

import java.util.Scanner;
class Exercicio2 {
  public static void main(String[] args) {
 
   double dolar; 
   double real;
   double cotacao = 4.95;

 Scanner entry = new Scanner(System.in);

 System.out.print("Digite o valor em dolar desejado para converção: ");
 dolar = entry.nextDouble();
real = dolar * cotacao;

System.out.printf("US$%.2f = R$%2f", dolar,real);

  }
} 
